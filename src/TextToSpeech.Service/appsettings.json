{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://localhost:5060"
      }
    }
  },
  "TTS": {
    "Output": {
      "Mode": "Memory",
      "Directory": "/tmp/tts-cache",
      "FileNamePattern": "{provider}_{timestamp}_{hash}.mp3"
    },
    "EdgeTTS": {
      "BaseUrl": "http://localhost:5555",
      "DefaultVoice": "cs-CZ-AntoninNeural",
      "Timeout": "00:00:30"
    },
    "Orchestration": {
      "Providers": [
        {
          "Name": "EdgeTTS-HTTP",
          "Priority": 1,
          "Enabled": true,
          "CircuitBreaker": {
            "FailureThreshold": 3,
            "ResetTimeout": "00:05:00",
            "UseExponentialBackoff": true,
            "MaxResetTimeout": "01:00:00"
          }
        }
      ]
    }
  }
}
